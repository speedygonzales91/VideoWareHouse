@model VideoProject.Models.Movie
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<p>Genre: @Model.Genre.Name</p>

@if (@Model.ReleaseDate != null)
{
    <p>Release Date: @Model.ReleaseDate.Value.ToString("MM/dd/yyyy")</p>
}


@if (@Model.DateAdded != null)
{
    <p>Date Added: @Model.DateAdded.Value.ToString("MM/dd/yyyy")</p>
}


 <p>Number in Stock: @Model.NumberInStock</p>

